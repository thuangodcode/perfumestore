<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Redirecting...</title>
  <script>
    // Hiển thị toast nếu có
    <% if (successMessage) { %>
      alert("<%= successMessage %>");
    <% } %>
    <% if (errorMessage) { %>
      alert("<%= errorMessage %>");
    <% } %>

    // Chuyển hướng sau 500ms
    setTimeout(() => {
      window.location.href = '/admin/dashboard';
    }, 500);
  </script>
</head>
<body>
  <p>Redirecting to admin dashboard...</p>
</body>
</html>
