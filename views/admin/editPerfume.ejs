<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>


  <div class="edit-container">
    <a href="/admin/dashboard" class="btn-back">&larr; Back</a>
    <div class="edit-card">
      
      <h1><%= perfume.perfumeName %></h1>

      <form id="editForm" action="/admin/perfumes/edit/<%= perfume._id %>" method="POST">
         
        <div class="form-group">
          <label for="perfumeName">Product Name</label>
          <input 
            type="text" 
            id="perfumeName" 
            name="perfumeName" 
            value="<%= perfume.perfumeName %>" 
            placeholder="Enter product name"
            required
          />
        </div>

        <div class="form-group">
          <label for="price">Price (VND)</label>
          <input 
            type="number" 
            id="price" 
            name="price" 
            value="<%= perfume.price %>" 
            placeholder="Enter product price"
            min="0"
            required
          />
        </div>

        <div class="form-group">
          <label for="uri">Image (URL)</label>
          <input 
            type="text" 
            id="uri" 
            name="uri" 
            value="<%= perfume.uri %>" 
            placeholder="https://example.com/image.jpg"
            required
          />
        </div>

        <div class="form-group">
  <label for="concentration">Concentration</label>
  <select id="concentration" name="concentration" required>
    <option value="Extrait" <%= perfume.concentration === "Extrait" ? "selected" : "" %>>Extrait</option>
    <option value="EDP" <%= perfume.concentration === "EDP" ? "selected" : "" %>>EDP (Eau de Parfum)</option>
    <option value="EDT" <%= perfume.concentration === "EDT" ? "selected" : "" %>>EDT (Eau de Toilette)</option>
    <option value="EDC" <%= perfume.concentration === "EDC" ? "selected" : "" %>>EDC (Eau de Cologne)</option>
    <option value="Eau Fraiche" <%= perfume.concentration === "Eau Fraiche" ? "selected" : "" %>>Eau Fraiche</option>
    <option value="Body Mist" <%= perfume.concentration === "Body Mist" ? "selected" : "" %>>Body Mist</option>
  </select>
</div>


         
        <div class="form-group">
          <label for="targetAudience">Target Audience</label>
          <select 
            id="targetAudience" 
            name="targetAudience"
            required
          >
            <option value="">Select target audience</option>
            <option value="Male" <%= perfume.targetAudience === 'Male' ? 'selected' : '' %>>Male</option>
            <option value="Female" <%= perfume.targetAudience === 'Female' ? 'selected' : '' %>>Female</option>
            <option value="LGBT" <%= perfume.targetAudience === 'LGBT' ? 'selected' : '' %>>LGBT</option>
          </select>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea 
            id="description" 
            name="description" 
            placeholder="Enter detailed product description..."
          ><%= perfume.description %></textarea>
        </div>

        <div class="form-actions">
          
          <button type="button" class="btn-primary" onclick="confirmSave(event)">Save Changes</button>
        </div>
      </form>
    </div>
  </div>

   
  <div id="saveModal" class="modal-overlay">
    <div class="modal">
      <div class="modal-header">
        <h3>Confirm Save</h3>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to save the changes to this product?</p>
      </div>
      <div class="modal-actions">
        <button class="btn-cancel" onclick="closeModal('saveModal')">Cancel</button>
        <button class="btn-confirm" onclick="performSave()">Save</button>
      </div>
    </div>
  </div>

   
  <div id="logoutModal" class="modal-overlay">
    <div class="modal">
      <div class="modal-header">
        <h3>Confirm Logout</h3>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to logout from the system?</p>
      </div>
      <div class="modal-actions">
        <button class="btn-cancel" onclick="closeModal('logoutModal')">Cancel</button>
        <button class="btn-confirm danger" onclick="performLogout()">Logout</button>
      </div>
    </div>
  </div>

  <script>
    function confirmSave(event) {
      event.preventDefault();
      document.getElementById('saveModal').classList.add('active');
    }

    function confirmLogout(event) {
      event.preventDefault();
      document.getElementById('logoutModal').classList.add('active');
    }

    function closeModal(modalId) {
      document.getElementById(modalId).classList.remove('active');
    }

    function performSave() {
      document.getElementById('editForm').submit();
    }

    function performLogout() {
      window.location.href = '/logout';
    }

    // Close modal when clicking outside
    document.querySelectorAll('.modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', function(e) {
        if (e.target === this) {
          this.classList.remove('active');
        }
      });
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        document.querySelectorAll('.modal-overlay').forEach(modal => {
          modal.classList.remove('active');
        });
      }
    });
  </script>
</body>
</html>
